
@{
	ViewBag.Title = "Server Status";
}
<meta http-equiv="refresh" content="180">
<section id="main-content">
	<section class="wrapper">
		@*<section class="wrapper">*@

		@*</section>*@
		<div class="row" style="width: 100%; display: contents">
			<div class="col-lg-12 col-md-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2><i class="fa fa-flag-o red"></i><strong>Server Satus</strong></h2>
						@*<div class="panel-actions">
								<a href="../Home/index.html#" class="btn-setting"><i class="fa fa-rotate-right"></i></a>
								<a href="../Home/index.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
								<a href="../Home/index.html#" class="btn-close"><i class="fa fa-times"></i></a>
							</div>*@
					</div>
					<div class="panel-body">
						<table id="statusTable" class="table table-hover table-striped table-bordered indexTable">
							<thead>
								<tr>
									<th style="width: 20%">Province</th>
									@*<th style="width: 10%">Resolution Ip</th>*@
									<th style="width: 20%">Isp</th>
									<th style="width: 10%">Last Execution</th>
									<th style="width: 10%">Status</th>
								</tr>
							</thead>
							<tbody id="statusInfo">
								@foreach (var data in @Model)
								{
									<tr>
										<td>@data.Province</td>
										@*<td>@data.DestinationIp</td>*@
										<td>@data.Isp</td>
										<td>@data.LastExecution</td>
										<td>
											@if (@data.Status == "Success")
											{
												<span class="badge badge-pill badge-success">Success</span>
											}
											else
											{
												<span class="badge-pill badge-danger">Failed</span>
											}
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>

				</div>

			</div>

		</div>
	</section>
</section>
@section scripts{

	<script>
		$(document).ready(function () {
			$(function () {
				$("#overlay").remove();
			});
			$("body").tooltip({ selector: '[data-toggle=tooltip]' });

		});
	</script>
}


