<div id="createUser" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="ModalLabel">New User</h5>
			</div>
			<div class="modal-body">
				<form id="RegistrationForm" role="form" action="/Account/AddOrEditForUser" method="post">
					<div class="form-group form-control-sm" style="display: none">
						<label for="Id" class="col-form-label-sm">Username:</label>
						<input type="text" name="Id" class="form-control form-control-sm" id="Id">
					</div>
					<div class="form-group form-control-sm">
						<label for="Username" class="col-form-label-lg">Username:</label>
						<input type="text" name="Username" class="form-control form-control-sm CheckUsername" id="Username" required>
					</div>
					<div class="form-group form-control-sm">
						<label for="Password" class="col-form-label-lg">Password:</label>
						<input type="password" name="Password" class="form-control form-control-sm" id="Password" required />
					</div>
					<div class="form-group form-control-sm">
						<label for="c_Password" class="col-form-label-lg">Confirm Password:</label>
						<input type="password" name="confirmPassword" class="form-control form-control-sm" id="c_Password" required equalTo="#Password"/>
					</div>
					<div class="form-group form-control-sm">
						<label for="Email" class="col-form-label-lg">Email:</label>
						<input type="email" name="Email" class="form-control form-control-sm CheckEmail" id="Email" required />
					</div>
					<div class="form-group form-control-sm">
						<label for="Type" class="col-form-label-lg">User Type</label>
						<select class="form-group form-control" id="Type" name="Type" style="height:34px;" required>
							<option value="">User Role</option>
							@foreach (var type in @Model.userType)
							{
								<option value="@type">@type</option>
							}
						</select>
					</div>
					<div class="form-group form-control-sm">
						<label for="CustomerId" class="col-form-label-lg">Customer Name</label>
						<input type="text" name="CustomerId" class="form-control form-control-sm" id="CustomerId" required />
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button id="SubmitNewUser" type="submit" class="btn btn-primary">Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div><br />